<!-- Page Header -->
<header class="masthead" style="background-image: url('../assets/post-sample-image.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Beitrag editieren</h1>
        </div>
      </div>
    </div>
  </div>
</header>


<!-- Schleife zur FehlerprÃ¼fung -->
<% if @post.errors.any? %>
  <h2> Fehler:</h2>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%=message%></li>
    <% end %>
  </ul>
<% end %>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-preview">
          <%= form_for @post do |f| %>
            <p>
              <%= f.label :titel %><br>
              <%= f.text_field :titel %>
            </p>

            <p>
              <%= f.label :content %><br>
              <%= f.text_area :content %>
            </p>

            <p>
              <%= f.submit "Editieren" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<hr>
